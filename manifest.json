{
  "manifest_version": 3,
  "name": "Mooodz & Water Reminder",
  "version": "1.0.0",
  "description": "Motivational Music & Hydration Reminder",
  "permissions": ["storage", "tabs", "pictureInPicture", "notifications"],
  "icons": {
    "16": "moodz.png",
    "48": "moodz.png",
    "128": "moodz.png"
  },

  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "bg.js"
  },
  "content_scripts": 
  [{ "matches": ["<all_urls>"], 
  "js": ["popup.js"] 
  }]
}

